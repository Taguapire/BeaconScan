<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
   x:Class="BeaconScan.CredentialsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Enter Credentials"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel">
    <StackPanel>
        <TextBlock Text="Username" />
        <TextBox x:Name="UsernameTextBox" x:FieldModifier="public" PlaceholderText="Enter your username" />
        <TextBlock Text="Password" />
        <PasswordBox x:Name="PasswordBox" x:FieldModifier="public" PlaceholderText="Enter your password" />
    </StackPanel>
</ContentDialog>

