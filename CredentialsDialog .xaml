<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
   x:Class="BeaconScan.CredentialsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ingresar Credenciales"
    PrimaryButtonText="Aceptar"
    SecondaryButtonText="Cancelar">
    <StackPanel>
        <TextBlock Text="Usuario" />
        <TextBox x:Name="UsernameTextBox" x:FieldModifier="public" PlaceholderText="Ingrese el usuario" />
        <TextBlock Text="Contraseña" />
        <PasswordBox x:Name="PasswordBox" x:FieldModifier="public" PlaceholderText="Ingrese la contraseña" />
    </StackPanel>
</ContentDialog>

